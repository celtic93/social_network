-unless current_user&.subscribed?(publisher)
  = link_to 'Follow', polymorphic_path([publisher, Subscription.new]),
                      class: "btn btn-outline-primary",
                      method: :post,
                      remote: true
-else
  = link_to 'Unfollow', subscription_path(id: publisher, publisher_type: publisher.class.name),
                      class: "btn btn-outline-primary",
                      method: :delete,
                      remote: true
