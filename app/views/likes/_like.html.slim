-unless current_user&.liked?(resource)
  = link_to "#{resource.likes.count} ‚ù§", polymorphic_url([resource, Like.new]),
                                     class: "like-#{resource.class.name.downcase}-link btn btn-outline-primary #{'btn-xs' if resource.class.name == 'Comment'}",
                                     method: :post,
                                     remote: true
-else
  = link_to "#{resource.likes.count} üíõ", like_path(id: resource, likeable_type: resource.class.name),
